{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "noLib": false,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "incremental": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "types": [
      "node",
      "webpack-env","jest"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts",
    "dist"
  ]
}